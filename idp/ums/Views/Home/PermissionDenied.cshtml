@{
    ViewBag.Title = GlobalAppSettings.SystemSettings.OrganizationName + " - [[[Permission Denied]]]";
}

@section styles{
    @await Html.PartialAsync("../Shared/_FontReference")
    <link rel="stylesheet" href="~/bundles/css/error-page-new.css" asp-append-version="true" />
}

@section MainSection{
    @if (!CloudAppConfig.IsSelfHosted)
    {
        <div>
            <div class="col-md-12">
                <div class="col-xs-12 text-center" style="color: #ff0000; margin-top: 60px; font-size: 30px">You do not have permission to view this page.</div>
            </div>
        </div>
    }
    else
    {
        <body class="error-full-content">
            <div class="error-page-outer">
                <div class="error-page-content">
                    <div class="error-inside">
                        <div class="error-image-center-1">
                            <img src="@GlobalAppSettings.SystemSettings.LoginLogo" onerror="if (this.src != '@Url.Content(CloudAppConfig.FallbackLoginLogoUrl)') this.src = '@Url.Content(CloudAppConfig.FallbackLoginLogoUrl)';" class="error-image-1">
                        </div>
                        <div class="error-image-center-2">
                            <img src="@GlobalAppSettings.CdnDomain/static/error-pages/v1/access-denied.svg" class="error-image-2">
                        </div>
                        <div class="error-type">[[[Access Denied]]]</div>
                        <div class="error-text">
                            [[[You do not have permission to view this page.]]]
                            <br>
                            [[[Please contact your administrator.]]]
                        </div>
                    </div>
                </div>
            </div>
        </body>
    }
}