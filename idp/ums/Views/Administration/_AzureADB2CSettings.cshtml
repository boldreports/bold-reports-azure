@{
    var appBranding = GlobalAppSettings.Branding;
}
<div role="tabpanel" class="tab-pane col-xs-12 no-padding" id="azure-ad-b2c-settings-tab">
    <div id="azure-ad-b2c-page-body" class="col-lg-12 col-md-12 col-sm-12 admin-page-body">
        <form id="saml-b2c-setting" name="ssoSettingsb2cForm" class="saml-form auth-settings-form col-lg-12 col-md-12 col-sm-12 no-padding" method="post" enctype="multipart/form-data" autocomplete="off">
            <input type="hidden" name="azureADB2CAuthenticationProvider" value="@ViewBag.AzureADB2CSettings.AuthProvider">
            <input type="hidden" name="azureB2CLogo" value="@ViewBag.AzureADB2CSettings.AzureADB2CSettings.Logo">
            <div class="col-xs-12 separator-margin">
                <div class="col-xs-12 no-padding">
                    <div class="material-switch inline-align">
                        <input type="checkbox" id="enable-sso-b2c" ng-model="isB2CEnabled" ng_change="hideValidationMessage(isB2CEnabled, 'azureadb2c')" />
                        <label for="enable-sso-b2c" class="label-primary"></label>
                    </div>
                    <div class="app-textbox-label inline-align">
                        [[[Enable Azure AD B2C]]]
                    </div>
                </div>
                <div class="col-md-12 no-padding input-field-margin">
                    <div class="col-md-12 no-padding">
                        <label class="app-textbox-label">[[[Organization Name]]]</label>
                    </div>
                    <div ng-class="(ssoSettingsb2cForm.AzureB2CProviderName.$dirty && ssoSettingsb2cForm.AzureB2CProviderName.$invalid) ? 'has-error' : ''">
                        <input type="text" class="form-control no-margin" ng-model="AzureB2CProviderName" ng-init="AzureB2CProviderName='@ViewBag.AzureADB2CSettings.AzureADB2CSettings.AzureB2CProviderName'" ng-maxlength="20" name="AzureB2CProviderName" placeholder="[[[Organization Name]]]" id="azure-b2c-provider-name" data-ng-disabled="!isB2CEnabled" required />
                        <span class="validation-message top-padding" ng-show="ssoSettingsb2cForm.AzureB2CProviderName.$error.maxlength && ssoSettingsb2cForm.AzureB2CProviderName.$dirty && isB2CEnabled">[[[Organization name is too long. Must be no more than 20 characters.]]]</span>
                        <span class="validation-message top-padding" ng-show="ssoSettingsb2cForm.AzureB2CProviderName.$error.required && ssoSettingsb2cForm.AzureB2CProviderName.$dirty && isB2CEnabled">[[[Please enter your organization name.]]]</span>
                    </div>
                    <div class="info-message no-padding">[[[Name of the organization to be displayed in the login page.]]]</div>
                </div>
                <div class="col-md-12 no-padding input-field-margin">
                    <div class="col-md-12 no-padding">
                        <label class="app-textbox-label">[[[Organization Logo]]]</label>
                    </div>
                    <div class="col-xs-12 no-padding logo-container">
                        <div id="azure-b2c-image-upload-box" class="auth-image-upload-box">
                            <div class="js-image-preview" style="background-image:{{azureB2CLogoUrl}}"></div>
                            <div class="upload-options">
                                <label>
                                    <span>[[[Change logo]]]</span>
                                    <input type="file" class="image-upload" accept="image/png,image/jpeg,image/svg+xml" ng-model="azureB2CLogoUrl" ng-init="azureB2CLogoUrl='@ViewBag.AzureADB2CSettings.LogoUrl'" name="azureB2CLogoUrl" data-ng-disabled="!isB2CEnabled" required />
                                </label>
                            </div>
                        </div>
                        <span class="validation-message top-padding" ng-show="!ssoSettingsb2cForm.isValidAzureB2CLogoUrl && isB2CEnabled"></span>
                    </div>
                    <div class="info-message no-padding">[[[Logo of the organization to be displayed in the login page.]]]</div>
                </div>
                <div class="col-md-12 no-padding input-field-margin">
                    <div class="col-xs-12 no-padding">
                        <label class="app-textbox-label">[[[Application Id]]]</label>
                    </div>
                    <div>
                        <input type="text" class="form-control no-margin" ng-model="ApplicationIdB2C" ng-init="ApplicationIdB2C='@ViewBag.AzureADB2CSettings.AzureADB2CSettings.ApplicationId'" name="ApplicationIdB2C" placeholder="[[[Application Id]]]" id="application-id-b2c" data-ng-disabled="!isB2CEnabled" required />
                        <span class="validation-message top-padding" ng-show="ssoSettingsb2cForm.ApplicationIdB2C.$error.required && ssoSettingsb2cForm.ApplicationIdB2C.$dirty ">[[[Please enter the application id.]]]</span>
                    </div>
                    @if (appBranding == AppBranding.Bold.Identifier)
                    {
                        <div class="info-message no-padding">
                            [[[A unique identifier of the Embedded BI web app created in Azure AD B2C.]]]
                        </div>
                    }
                    else
                    {
                        <div class="info-message no-padding">
                            [[[A unique identifier of the Enterprise Reporting web app created in Azure AD B2C.]]]
                        </div>
                    }
                </div>
                <div class="col-md-12 no-padding input-field-margin">
                    <div class="col-xs-12 no-padding">
                        <label class="app-textbox-label">[[[Tenant Name]]]</label>
                    </div>
                    <div>
                        <input type="text" class="form-control no-margin" ng-model="TenantNameB2C" ng-init="TenantNameB2C='@ViewBag.AzureADB2CSettings.AzureADB2CSettings.TenantName'" name="TenantNameB2C" placeholder="[[[Tenant Name]]]" id="tenant-name-b2c" data-ng-disabled="!isB2CEnabled" ng-pattern="tenantRegex" required />
                        <span class="validation-message top-padding" ng-show="ssoSettingsb2cForm.TenantNameB2C.$error.required && ssoSettingsb2cForm.TenantNameB2C.$dirty">[[[Please enter tenant name.]]]</span>
                        <span class="validation-message top-padding" ng-show="ssoSettingsb2cForm.TenantNameB2C.$error.pattern ">[[[Please enter valid tenant name.]]]</span>
                    </div>
                    <div class="info-message no-padding">[[[A dedicated instance of the Azure AD B2C service.]]]</div>

                </div>
                <div class="col-md-12 no-padding input-field-margin">
                    <div class="col-xs-12 no-padding">
                        <label class="app-textbox-label">[[[Sign in Policy]]]</label>
                    </div>
                    <div>
                        <input type="text" class="form-control no-margin" ng-model="PolicyB2C" ng-init="PolicyB2C='@ViewBag.AzureADB2CSettings.AzureADB2CSettings.SigninPolicy'" name="PolicyB2C" placeholder="[[[Signin Policy]]]" id="policy-b2c" data-ng-disabled="!isB2CEnabled" required />
                        <span class="validation-message top-padding" ng-show="ssoSettingsb2cForm.PolicyB2C.$error.required && ssoSettingsb2cForm.PolicyB2C.$dirty">[[[Please enter the policy name.]]]</span>
                    </div>
                    <div class="info-message no-padding">[[[The name of the Sign in/Sign up user flow created in Azure AD B2C.]]]</div>
                </div>
                @*<div class="col-md-12 no-padding input-field-margin">
                        <div class="col-xs-12 no-padding">
                            <label class="app-textbox-label">[[[Reset Password Policy]]]</label>
                        </div>
                        <div>
                            <input type="text" class="form-control no-margin" ng-model="PasswordPolicyB2C" ng-init="PasswordPolicyB2C='@ViewBag.AzureADB2CSettings.AzureADB2CSettings.PasswordResetPolicy'" name="PasswordPolicyB2C" placeholder="[[[Reset Password Policy (Optional)]]]" id="Password-policy-b2c" data-ng-disabled="!isB2CEnabled"/>
                        </div>
                    </div>*@
                <div class="col-xs-12 no-padding input-field-margin">
                    <div class="material-switch inline-align">
                        <input type="checkbox" id="enable-slo-b2c" ng-model="IsB2CSloEnabled" data-ng-disabled="!isB2CEnabled" />
                        <label for="enable-slo-b2c" class="label-primary"></label>
                    </div>
                    <div class="app-textbox-label inline-align">
                        [[[Enable Single Logout]]]
                    </div>
                    <div class="info-message no-padding">
                        [[[The single logout (SLO) option allows users to log out of both the application and Azure AD B2C.]]]
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
