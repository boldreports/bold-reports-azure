<div class="sub-section col-xs-12 no-padding">
    <h3 class="title sub-section-heading">[[[Display]]]</h3>
    <div class="section-info-message">
        [[[If Inherit from user’s browser locale/timezone is selected, the displayed date, time, and time zone will be based on the user’s browser settings.]]]
    </div>
    <div class="form-group section-content-first">
        @Html.Label("time-zone", "[[[Time Zone]]]", new { @class = "app-textbox-label col-lg-12" })
        <div class="admin-settings-drop-down col-lg-12 no-padding">
            @Html.DropDownList("timezone", ViewBag.TimeZone as IEnumerable<SelectListItem>, new { id = "time-zone", @class = "form-control", data_none_results_text = "No results match", data_size = "10", title = "[[[Select Timezone]]]", data_live_search = "true", data_live_search_placeholder = "Search" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("MM_DD_YYYY", "[[[Date format]]]", new { @class = "app-textbox-label col-lg-12" })
        <div class="dropdown admin-settings-drop-down col-lg-12 no-padding">
            @Html.DropDownList("dateformat", ViewBag.DateFormat as IEnumerable<SelectListItem>, new { id = "date-format", @class = "form-control", data_none_results_text = "[[[No results match]]]", data_size = "10", title = "[[[Select DateFormat]]]", data_live_search = "true", data_live_search_placeholder = "[[[Search]]]" })

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Use 24-hour format", "[[[Time format]]]", new { @class = "app-textbox-label col-lg-12" })
        <div class="admin-settings-drop-down col-lg-12 no-padding">
            @Html.DropDownList("timeformat", ViewBag.TimeFormat as IEnumerable<SelectListItem>, new { id = "time_format", @class = "form-control", data_none_results_text = "[[[No results match]]]", data_size = "10", title = "[[[Select TimeFormat]]]", data_live_search = "true", data_live_search_placeholder = "[[[Search]]]" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("language", "[[[Application language]]]", new { @class = "col-lg-12 app-textbox-label" })
        <div class="admin-settings-drop-down col-lg-12 language-group no-padding">
            @Html.DropDownList("language", ViewBag.languageList as IEnumerable<SelectListItem>, new { id = "language", @class = "form-control pull-left", data_live_search = "false" })
            <input type="hidden" id="lang_tag" value="@ViewBag.systemLanguage">
            <input type="hidden" id="return_url" value="@ViewBag.SystemSettings.BaseUrl">
        </div>
    </div>
</div>