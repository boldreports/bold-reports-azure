
@model System.Xml.Linq.XDocument
@{
    ViewBag.Title = "[[[Additional Settings]]] - " + GlobalAppSettings.SystemSettings.OrganizationName;
    bool? updateConfigValues = ViewBag.Result;
}
@section styles{
    <link rel="stylesheet" href="~/bundles/css/additional-settings.css" asp-append-version="true" />
}
@section scripts{

    <script src="~/bundles/js/additional-settings.js" asp-append-version="true"></script>

    @if (Context.Request.Method == "POST" && updateConfigValues.HasValue)
    {
        <script>
            var isRequestSuccess = "@updateConfigValues.Value";

            $(document).ready(function () {
                if (isRequestSuccess.toLowerCase() === "true") {
                    SuccessAlert(window.TM.App.LocalizationContent.Configuration, window.TM.App.LocalizationContent.ConfigurationUpdated, 7000);
            }
                else {
                    WarningAlert(window.TM.App.LocalizationContent.Configuration, window.TM.App.LocalizationContent.ConfigurationUpdateError, 7000);
            }
        });
        </script>
    }

}

@section MainSection{
    @await Html.PartialAsync("_AdminMenu")

    <div id="look-and-feel-container" class="admin-page-container">
        <div id="organization-block" class="col-xs-12 no-padding">

            <div class="col-md-12 import-area admin-page-header">

                <hgroup class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-padding">

                    <h1 class="h2 page-title">[[[Configuration]]]</h1>
                    <h5 class="page-description">[[[Update the configuration of the application]]]</h5>
                </hgroup>
            </div>

            <form id="look-and-feel-form" class="col-md-12 form-horizontal no-padding" method="post" action="configuration" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="general-sub-section admin-page-body">

                    <div class="form-group">

                        <label class="app-textbox-label col-xs-2 ">
                            [[[Configuration]]]
                        </label>
                        <textarea name="configFileValues" class="textarea-label">@Model</textarea><br><br>

                    </div>

                </div>
                <div class="admin-page-actions col-lg-12 col-md-12 no-margin">

                    <a href="@Url.Content("~/administration/configuration")" class="secondary-button pull-right">Cancel</a>
                    <button type="submit" class="primary-button pull-right update-system-settings">Save</button>
                </div>
            </form>
        </div>

    </div>

}
