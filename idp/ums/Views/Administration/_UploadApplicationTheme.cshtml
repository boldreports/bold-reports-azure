<div id="application-theme-upload-dialog-popup">
    <div class="modal" tabindex="-1" role="dialog">
        <div id="application-theme-upload-dialog" class="modal-dialog applicationtheme-upload-dialog" role="document">
            <form action="@Url.Action("UploadApplicationFile", "Administration")" method="post"  onsubmit="uploadformValidation()" enctype="multipart/form-data" class="col-lg-12 no-padding modal-content upload-form" autocomplete="off" novalidate>
                <div class="col-xs-12">
                    <div class="col-xs-12 field-padding">
                        <label class="font-label">[[[Choose Theme File]]]</label>
                        <div class="upload-box">
                            <input type="text" class="form-control no-margin file-name trigger-app-theme-upload theme-file-name" id="application-theme-file-name" tabindex="-1" value="" placeholder="[[[Choose Theme File]]]" readonly>
                            <span class="trigger-app-theme-upload input-group-addon upload-file-btn">...</span>
                            <input type="file" accept=".css" name="applicationthemefile" id="applicationtheme-file" class="upload-btn">
                            <span class="applicationthemefileupload-validation-messages" id="invalid-applicationthemefile-name"></span>
                        </div>
                    </div>

                    <div class="col-xs-12 field-padding padding-bottom">
                        <label class="font-label">[[[Theme Name]]]</label>
                        <div>
                            <input type="text" id="applicationtheme-name" maxlength="254" class="form-control validation theme-name" placeholder="[[[Theme Name]]]" name="filename" data-name="applicationtheme name" required disabled>
                            <span class="validation-message" id="invalid-applicationtheme-name"></span>
                        </div>
                    </div>
                    <div class="col-xs-12 field-padding padding-bottom">
                        <p class="no-margin no-padding font-label">Please download the default variables from this <a target="_blank" href="@Url.Action("GetThemeFilesDownload", "Administration")">link</a>. Which includes both light and dark mode files. Upload after customizing the variables in preferred mode.</p>
                        
                    </div>
                </div>
                <div class="col-xs-12 modal-footer">
                    <input type="button" id="cancel-applicationtheme-upload" class="secondary-button popup-close" value="[[[Cancel]]]" onclick="onUploadApplicationThemeDialogClose()" />
                    <input type="submit" id="upload-applicationtheme" class="primary-button upload-theme" value="[[[Upload]]]" disabled />
                </div>
            </form>
        </div>
    </div>
</div>
