@using Syncfusion.Server.Base;
@using Syncfusion.Server.Base.DataClasses;

@{
    var favicon = (ViewBag.Favicon != null) ? ViewBag.Favicon : GlobalAppSettings.SystemSettings.FavIcon;
}
@if (!CloudAppConfig.IsSelfHosted)
{
    <link rel="icon" href="@GlobalAppSettings.CdnDomain/static/company/@(GlobalAppSettings.Branding == AppBranding.Bold.Identifier ? "boldid" : GlobalAppSettings.Branding)/logo/v1/@IconFileNames.Favicon" onerror="if (this.href != '/content/images/@GlobalAppSettings.Branding/application/@IconFileNames.Favicon') this.href = '/content/images/@GlobalAppSettings.Branding/application/@IconFileNames.Favicon';" />
}
else
{
    <link rel="icon" href="@favicon" onerror="this.onerror=null;this.src='@Url.Content("~/images/" + GlobalAppSettings.Branding + "/application/" + IconFileNames.Favicon)';" />
}
