@{
    var product = ViewBag.Product != null ? (TenantType)ViewBag.Product : TenantType.BoldBI;
    var requestUrl = new Uri(this.Context.Request.GetDisplayUrl());
    string title;
    string description;
}

@if (product == TenantType.BoldBI)
{
    title = "Try Dashboards in the cloud";
    description = "The " + CloudAppConfig.BoldBIDisplayName + " is an end-to-end solution for creating, managing, and sharing interactive business dashboards. With our hosted solution for dashboards, you don't need to worry about maintaining a server at your end.";

    <meta property="og:title" content="@title" />
    <meta property="og:description" content="@description" />
    <meta property="og:image" content="@CloudAppConfig.SyncfusionLoginLogoUrl" />
    <meta property="og:url" content="@requestUrl.AbsoluteUri" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="@CloudAppConfig.TenantAppURL" />
    <meta property="twitter:title" content="@title" />
    <meta property="twitter:url" content="@requestUrl.AbsoluteUri" />
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:description" content="@description" />
    <meta property="twitter:image" content="@CloudAppConfig.SyncfusionLoginLogoUrl" />
}
else if (product == TenantType.BoldBIOnPremise)
{
    title = "Try Bold BI Enterprise";
