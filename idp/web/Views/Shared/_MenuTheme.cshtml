@if (!GlobalAppSettings.SystemSettings.IsCustomThemeForMenu || GlobalAppSettings.SystemSettings.ThemeStyle == null)
{
<style>
    :root {
        --nav-menu-bg-color: #fff;
        --nav-menu-text-color: #333;
        --nav-menu-active-color: #dbe9ff;
        --nav-menu-active-text-color: #0565ff;
        --nav-menu-hover-color: #e2e2e2;
        --nav-menu-hover-text-color: #333;
        --nav-menu-separtor-icon-color: #cccccc;
    }
</style>
}
else
{
<style>
    :root {
        @GlobalAppSettings.SystemSettings.ThemeStyle
    }
</style>
}
