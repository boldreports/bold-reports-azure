<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net threshold="ALL">
    <!-- === BlobAppender Appender for NON-ERROR messages file === -->
    <appender name="BLOB_DEBUG_APPENDER" type="log4net.Appender.AzureAppendBlobAppender, log4net.Appender.Azure" class="ch.qos.logback.classic.AsyncAppender">
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="INFO" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <param name="ContainerName" value="identity-provider" />
      <param name="DirectoryName" value="logs/web/debug" />
      <param name="ConnectionStringName" value="Log4NetBlobConnectionString"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message" />
      </layout>
    </appender>

    <!-- === BlobAppender Appender for ERROR messages file === -->
    <appender name="BLOB_ERROR_APPENDER" type="log4net.Appender.AzureAppendBlobAppender, log4net.Appender.Azure" class="ch.qos.logback.classic.AsyncAppender">
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="ERROR" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <param name="ContainerName" value="identity-provider" />
      <param name="DirectoryName" value="logs/web/error" />
      <param name="ConnectionStringName" value="Log4NetBlobConnectionString"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>

    <!-- === Exceptionless Appender for NON-ERROR messages file === -->
    <appender name="EXCEPTIONLESS_DEBUG_APPENDER" type="Exceptionless.Log4net.ExceptionlessAppender, Exceptionless.Log4net" class="ch.qos.logback.classic.AsyncAppender">
      <apiKey value="" />
      <serverUrl value="https://logs-ds.boldbi.com" />
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="INFO" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="Date: %utcdate{dd MMM yyyy HH:mm:ss} [%thread] %n Location: %location %n Identity : %identity %n File : %file %n Username: %username %n Method: %method - %line %n stacktracedetail: %stacktrace %n Level: %level %logger %n Application: %property{Loggername} %n Message : %message %n Exception: %exception %n%n" />
      </layout>
    </appender>

    <!-- === Exceptionless Appender for ERROR messages file === -->
    <appender name="EXCEPTIONLESS_ERROR_APPENDER" type="Exceptionless.Log4net.ExceptionlessAppender, Exceptionless.Log4net" class="ch.qos.logback.classic.AsyncAppender">
      <apiKey value="" />
      <serverUrl value="https://logs-ds.boldbi.com" />
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="ERROR" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="Date: %utcdate{dd MMM yyyy HH:mm:ss} [%thread] %n Location: %location %n Identity : %identity %n File : %file %n Username: %username %n Method: %method - %line %n stacktracedetail: %stacktrace %n Level: %level %logger %n Application: %property{Loggername} %n Message : %message %n Exception: %exception %n%n" />
      </layout>
    </appender>
    
    <root>
      <level value="ALL" />
      <appender-ref ref="BLOB_DEBUG_APPENDER" />
      <appender-ref ref="BLOB_ERROR_APPENDER" />
      <appender-ref ref="EXCEPTIONLESS_DEBUG_APPENDER" />
      <appender-ref ref="EXCEPTIONLESS_ERROR_APPENDER" />
    </root>
  </log4net>
</configuration>