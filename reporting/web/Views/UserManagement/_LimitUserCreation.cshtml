<div class="modal no-padding" id="limit-user" tabindex="-1" role="dialog" style="display:none">
    <div class="col-lg-12 modal-dialog no-padding" role="document">
        <div class="col-lg-12 modal-content no-padding" autocomplete="off">
            <div class="col-md-12 modal-header">
                <div class="col-xs-11 no-padding">
                    <span class="su su-license-settings head-icon"></span>
                    <span class="modal-title"> [[[License limit reached]]]</span>
                </div>
                <div class="col-xs-1 no-padding">
                    <a href="javascript:void(0);" class="pull-right" title="[[[Close]]]" onclick="onLimitUserDialogClose()">
                        <span class="su su-close"></span>
                    </a>
                </div>
            </div>
            <div class="modal-body col-xs-12">
                <div class="col-xs-12">
                    <div class="limit-user-body padding10">
                        <span id="limit-import-ad" style="display: none">
                            [[[You can only have ]]] <span class="licensed-user-count">0</span> [[[ users as per your ]]]<a href="@Url.Action("LicenseSettings", "Administration")">[[[current plan]]]</a>. <a href="@Url.Action("LicenseSettings", "Administration")#plan-upgrade">[[[Upgrade your plan ]]]</a> [[[to add more users.]]]
                            [[[You can only choose ]]] <span class="importad-allowed-count"></span> [[[ user(s) to import since there are only ]]] <span class="importad-allowed-count"></span> [[[remaining license(s).]]]
                        </span>
                        <span id="zero-user-acc" style="display:none">
                            [[[You can only have ]]] <span class="licensed-user-count">0</span> [[[ users as per your ]]]<a href="@Url.Action("LicenseSettings", "Administration")">[[[current plan]]]</a>. <a href="@Url.Action("LicenseSettings", "Administration")#plan-upgrade">[[[Upgrade your plan ]]]</a> [[[to add more users.]]]
                        </span>
                        <span id="user-account-activation" style="display:none">
                            [[[You can only have ]]] <span class="licensed-user-count">0</span> [[[users as per your ]]]<a href="@Url.Action("LicenseSettings", "Administration")">[[[current plan]]]</a>. <a href="@Url.Action("LicenseSettings", "Administration")#plan-upgrade">[[[Upgrade your plan ]]]</a> [[[to add more users.]]]
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 modal-footer">
                <div class="col-xs-12 no-padding text-center validationArea" id="close">
                    <input title="" type="button" id="Cancel" class="secondary-button" value="[[[OK]]]" onclick="onLimitUserDialogClose()" tabindex="3" autofocus />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#limit-user").ejDialog({
            width: "378px",
            showOnInit: false,
            allowDraggable: false,
            enableResize: false,
            height: "auto",
            showHeader: false,
            enableModal: true,
            closeOnEscape: true,
            close: "onLimitUserDialogClose"
        });
    });

    function onLimitUserDialogClose() {
        $("#limit-user").ejDialog("close");
        $("#limit-import-ad").hide();
        $("#zero-user-acc").hide();
        if (typeof (onUserAddDialogClose) != "undefined") {
            onUserAddDialogClose();
        }
    }
</script>