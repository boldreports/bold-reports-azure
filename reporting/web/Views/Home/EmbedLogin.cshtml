@using Syncfusion.Server.Base.Helpers

@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var appLogo = globalAppSettings.SystemSettings.LoginLogo;
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    var defaultAppLogo = reportServerResourceUrl + "/cdn/images/application/" + ServerAppConfig.AppSettings.AppBranding.Identifier + "/" + IconFileNames.LoginLogo;
    var faviconFallbackPath = reportServerResourceUrl + "/cdn/images/application/" + ServerAppConfig.AppSettings.AppBranding.Identifier + "/" + IconFileNames.Favicon;
    var showContainer = (ViewBag.HasSSO ?? ViewBag.HasSSO == true && !string.IsNullOrWhiteSpace(ViewBag.ExternalLogin)) ? "none" : "block";
    var loginProvider = (ViewBag.HasSSO ?? ViewBag.HasSSO == true && !string.IsNullOrWhiteSpace(ViewBag.ExternalLogin)) ? ViewBag.ExternalLogin : "";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Embed - @globalAppSettings.SystemSettings.OrganizationName</title>
    <link rel="icon" href="@globalAppSettings.SystemSettings.FavIcon" id="favicon-link" />
    <script nonce="@Context.Items["ScriptNonce"]">
        var idLogin = '@globalAppSettings.SystemSettings.IDPUrl';
        var serverUrl = '@globalAppSettings.SystemSettings.BaseUrl';
        var showContainer = '@showContainer';
        var loginProvider = '@loginProvider';
    </script>

    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/theme/light.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/theme/light.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/embed-login.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/embed-login.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, reportServerResourceUrl)" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/embed-login.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/embed-login.js")" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/theme/light.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/theme/light.min.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/embed-login.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/embed-login.min.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, reportServerResourceUrl)" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/embed-login.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/embed-login.min.js")" crossorigin="anonymous"></script>
    </environment>
    @*<link rel="icon" href="@globalAppSettings.SystemSettings.FavIcon" onerror="if (this.href != '@globalAppSettings.SystemSettings.CDNLink/images/application/@ServerAppConfig.AppSettings.AppBranding.Identifier/@IconFileNames.Favicon') this.href = '@globalAppSettings.SystemSettings.CDNLink/images/application/@ServerAppConfig.AppSettings.AppBranding.Identifier/@IconFileNames.Favicon';" />*@
    <script nonce="@Context.Items["ScriptNonce"]">
        document.addEventListener("DOMContentLoaded", function () {
            var fallbackFaviconPath = '@faviconFallbackPath';
            var faviconLinkElement = document.getElementById("favicon-link");
            var faviconValidationImageObj = new Image();
            faviconValidationImageObj.src = faviconLinkElement.href;

            faviconValidationImageObj.addEventListener("error", function () {
                faviconLinkElement.href = fallbackFaviconPath;
            });
        });
    </script>
</head>
<body>
    <div class="container" style="display: @showContainer">
        <div class="content">
            <div class="embed-login-image">
                <img data-alt="@globalAppSettings.SystemSettings.OrganizationName" data-id="application-logo" data-src="@appLogo" data-default="@defaultAppLogo" class="lazyload img-loader"/>
            </div>
            <p class="embed-login-header">@globalAppSettings.SystemSettings.OrganizationName</p>
            <p class="embed-login-description">[[[Please Login to render the report]]]</p>
            <button id="login" class="primary-button app-btn-primary">[[[Sign in]]]</button>
        </div>
        <div class='loader-blue loader-icon' id='loader'><svg class='circular'><circle class='path' cx='27' cy='27' r='20' fill='none' stroke-width='4' stroke-miterlimit='10'></circle></svg></div>
    </div>
</body>
</html>
