@using Syncfusion.Server.Base.Helpers

@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var tenantAppConfig = new TenantAppConfiguration(globalAppSettings);
    var loginImage = globalAppSettings.SystemSettings.LoginLogo;
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');

}
<!DOCTYPE html>
<html class="dashboard-server">
<head>
    @await Html.PartialAsync("_OGPContent", new ViewDataDictionary(ViewData) { { "PageTitle", "Login" }, { "OrganizationName", globalAppSettings.SystemSettings.OrganizationName }, { "Logo", loginImage } })
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/account-page.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/account-page.css")" crossorigin="anonymous" />
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/account-page.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/account-page.min.css")" crossorigin="anonymous" />
    </environment>
    @await Html.PartialAsync("~/Views/Shared/_LoaderIcon.cshtml")

    <script nonce="@Context.Items["ScriptNonce"]" type="text/javascript">
        window.onload = function () {
            document.getElementById('login-form').submit();
        }
    </script>
</head>
<body>
    <form method="post" id="login-form" name="loginForm" class="login-form">
        <div id="container">
            <div id="inner-container">
                <div id="loading-popup"></div>
                <span id="waiting-text">[[[Please wait...]]]</span>
            </div>
        </div>
    </form>
</body>
</html>
