@{ Layout = null; }
<script nonce="@Context.Items["ScriptNonce"]">
        var deleteUserFromGroupUrl = "@Url.Action("DeleteUserFromGroup", "Group")";
        var deleteGroupUrl = "@Url.Action("DeleteGroup", "Group")";
</script>
<div id="user-delete">
    <div id="user-delete-confirmation" class="no-padding">
        <div class="modal-content col-xs-12 no-padding" id="container">
            <div class="col-md-12 modal-header">
                <div class="col-xs-8 no-padding">
                    <span class="su su-delete head-icon"></span>
                    <span class="modal-title">[[[Remove Access]]]</span>
                </div>
                <div class="col-xs-4 no-padding">
                    <a href="javascript:void(0);" class="popup-close  pull-right"><span class="su su-close"></span></a>
                    <div id="folder-setting-arrow" class="downArrow" style="left: 37px;"></div>
                </div>
            </div>
            <div class="modal-body col-xs-12 no-padding">
                <div class="col-xs-12 no-left-padding no-bottom-padding no-right-padding">
                    <div class="delete-msg">[[[Are you sure you want to delete user access?]]]</div>
                </div>
            </div>
            <div class="col-xs-12 modal-footer">
                <div class="col-xs-4">
                    <input type="hidden" id="hidden-id" value="@ViewBag.id" />
                    <input type="hidden" id="hidden-name" value="@ViewBag.name" />
                    <input type="hidden" id="hidden-group-id" value="@ViewBag.groupId" />
                </div>
                <div class="col-xs-8 no-padding pull-right margin-top">
                    <input type="button" id="delete-user" class="app-button app-critical-action-button app-btn-danger" value="[[[Yes]]]" />
                    <input type="button" id="cancel-group" class="app-button app-secondary-button app-btn-secondary popup-close" value="[[[No]]]" />
                </div>
            </div>
        </div>
    </div>
</div>