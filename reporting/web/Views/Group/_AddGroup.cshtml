@{ Layout = null; }
<script nonce="@Context.Items["ScriptNonce"]">
        var deleteGroupUrl = "@Url.Action("DeleteGroup", "Group")";
        var groupPageUrl = "@Url.Action("Group", "Group")";
</script>
<div class="white-bg" id="resolution-fix">
    <form class="col-lg-12 no-padding group-form" id="popup-container" autocomplete="off">
        <div class="col-md-12 header-menu pull-left no-margin">
            <div class="col-xs-6 no-padding">
                <span class="su su-group-1 head-icon"></span>
                <span class="popup-title no-padding">[[[Add Group]]]</span>
            </div>
            <div class="col-xs-6 no-padding">
                <a href="javascript:void(0);" class="popup-close close-dialog pull-right" title="[[[Close]]]"><span class="su su-close pull-right"></span></a>
                <div id="folder-setting-arrow" class="down-arrow"></div>
            </div>
        </div>

        <div class="dialog-body col-xs-12 no-padding">
            <div class="col-xs-12 namepad">
                <div class="col-xs-3 text-right no-padding top-margin">[[[Name]]]<span class="mandatory">*</span></div>
                <div class="col-xs-1"></div>
                <div class="col-xs-8 grouppad" id="group-name">
                    <input type="text" id="GroupName" class="form-control has-error" placeholder="[[[Group name]]]" name="groupname" tabindex="1" maxlength="60">
                    <span id="invalid-groupname" class="error-message pull-left" title="[[[Please enter group name]]]" data-content=""></span>
                </div>
            </div>
            <div class="col-xs-12 namepad">
                <div class="col-xs-3 text-right no-padding top-margin">[[[Description]]]</div>
                <div class="col-xs-1"></div>
                <div class="col-xs-8 grouppad">
                    <textarea class="form-control has-error" maxlength="1024" id="group-description" tabindex="2"></textarea>
                    <div class="help-text">
                        *[[[1024 characters maximum]]]
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 dialog-footer text-right">
            <div class="col-xs-6">
                <div class="col-md-12 success-message pull-left no-padding"></div>
            </div>
            <div class="col-xs-6 no-padding text-right">
                <input type="button" id="add-group" class="primary-button app-btn-primary" value="[[[Add]]]" tabindex="3" />
                <input type="button" id="cancel-group" class="secondary-button app-btn-secondary pull-right text-right close-dialog" value="[[[Cancel]]]" tabindex="4" />
            </div>
        </div>
    </form>
</div>
