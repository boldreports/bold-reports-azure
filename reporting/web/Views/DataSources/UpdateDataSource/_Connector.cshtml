@using System.Globalization;
@{
    var globalAppSettings = _globalAppSettings;
    var designerToken = ViewBag.AccessToken;
    var language = CultureInfo.CurrentCulture.Name;
}
<script nonce="@Context.Items["ScriptNonce"]">
    var updateURL = "@Url.Action("Update", "DataSources")";
</script>
<div class="cd-connector-container" ng-controller="connectorCtrl">
    <div class="dc-container">
        <div class="dc-scroller-container rs-scroller">
            <div class="dc-scroller">
            <div class="dc-header-container">
                <div class="dc-header"></div>
                <div class="dc-description-img su-help"></div>
            </div>
                <div class="dc-config-container">
                    <div class="dc-config">
                        @{
#if (BoldReportsCloud)
                            var serviceURL = globalAppSettings.SystemSettings.ReportServiceEndPoint.TrimEnd('/') + "/api/Designer";
#else
                            string serviceURL = ServerAppConfig.InternalAppDataServiceUrl.TrimEnd('/') + "/api/Designer";
#endif
                            string reportServerApiUrl = new ReportServerApiEndPoints(globalAppSettings).ReportServerApiUrl();
                            string isAzureApplication = ServerAppConfig.IsAzureApplication.ToString().ToLower();
                        }
                        <div class="data-designer-container">
                            <div id="dataDesigner" boldReportDesigner e-serviceUrl="@serviceURL" e-reportServerUrl="@reportServerApiUrl" e-isAzureApp=@isAzureApplication e-reportDataExtensions="reportDataExtensions" e-create="onDesignerCreate" e-ajaxBeforeLoad="onAjaxBeforeLoad" e-encryptData="encryptData" e-decryptData="decryptData" e-serviceAuthorizationToken="@designerToken" e-locale="@language">
                                <div class="dataContainer e-reportdesigner-designer-configuration"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{ await Html.RenderPartialAsync("~/Views/DataSources/UpdateDataSource/_Footer.cshtml"); }
</div>