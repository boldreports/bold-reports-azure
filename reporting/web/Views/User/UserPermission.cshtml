@using Syncfusion.Server.Base.Helpers

@{
    var globalAppSettings = _globalAppSettings;

    ViewBag.Title = "[[[My Permissions]]] - " + globalAppSettings.SystemSettings.OrganizationName;
    ViewBag.HelpSiteUrl = GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.MyPermissions);
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
}

@section MainSection{
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/user-permissions.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/user-permissions.css")" crossorigin="anonymous" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/user-permissions.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/user-permissions.js")" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/user-permissions.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/user-permissions.min.css")" crossorigin="anonymous" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/user-permissions.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/user-permissions.min.js")" crossorigin="anonymous"></script>
    </environment>
    @await Html.PartialAsync("_ProfileMenu")
    <div id="user-permissions-container" class="admin-page-container">
        <div class="admin-page-header col-12">
            <hgroup class="col-8 no-padding">
                <h1 class="page-title">[[[MY PERMISSIONS]]]</h1>
                <h5 class="no-padding page-description">[[[View the permissions for the resources you can access.]]]</h5>
            </hgroup>
        </div>

        <div class="admin-page-body col-lg-12">
            @(!new DeviceDetection(Context).IsMobile ? await Html.PartialAsync("../User/_UserPermissionGrid") : await Html.PartialAsync("../User/_UserPermissionGridForMobile"))
        </div>
    </div>
}