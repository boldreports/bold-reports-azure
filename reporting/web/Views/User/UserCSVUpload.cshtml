<script nonce="@Context.Items["ScriptNonce"]">
    $(document).ready(function () {
        $(document).on('submit', '#csv-file-upload-form', function (event) {
            if (!ValidateCSVFile()) {
                event.preventDefault();
            }
        });

        $(document).on("click", "#group-Close-button", CloseGroup);
    });

    function CloseGroup() {
        parent.$(".modal,.modal-backdrop").remove();
    }

    function ValidateCSVFile() {
        var csvfile = document.getElementById("csvfile");
        return false;
    }
</script>
<link asp-append-version="true" href="~/content/Styles/Bootstrap.css" rel="stylesheet" />
<link asp-append-version="true" href="~/content/Styles/Style.css" rel="stylesheet" />
<form action="@Url.Action("UploadFileFormAction", "User")" id="csv-file-upload-form" target="_parent" method="post" enctype="multipart/form-data">
    <div class="modal-header dialog-header-confirm">
        <button class="close" id="group-Close-button" type="button">
            ×
        </button><h4 class="modal-title">[[[Add Users by CSV File Upload]]]</h4>
    </div>
    <div class="modal-body col-xs-12 content">
        <div class="col-xs-6">
            <input type="file" name="csvfile" id="csvfile">
        </div>
        <div class="col-xs-6 no-padding">
            <a href="/Content/Documents/Template.csv" title="" style="float:right;">
                [[[Download Template]]]
            </a>
        </div>
    </div>
    <div class="modal-footer content" style="text-align:right;"><input type="submit" value="[[[Show List]]]" class="btn btn-blue"></div>
</form>