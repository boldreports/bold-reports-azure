@model NotificationSettings
@{ 
    var notificationList = new List<SelectListItem>
    {
    new SelectListItem { Text = "[[[Enable]]]", Value = ((int)NotificationPreferenceOption.Enable).ToString() },
        new SelectListItem { Text = "[[[Disable]]]", Value = ((int)NotificationPreferenceOption.Disable).ToString()},
    new SelectListItem { Text = "[[[Inherit from global settings]]]", Value = ((int)NotificationPreferenceOption.Inherit).ToString()}
    };
}

    <div id="notification-settings" class="col-md-12 col-lg-12 col-sm-12 col-xs-12 no-margin admin-page-body">
        <input type="hidden" class="page-title" data-page="NOTIFICATION PREFERENCE">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="notification-heading-form-div">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 no-padding" id="section-heading">
                [[[Notification Settings]]]
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding" id="notification-preference-form-div">
            <form class="col-xs-12 col-sm-12 col-md-12 col-lg-12 notification-preference-form no-padding" autocomplete="off">
                <div class="notification-preference-table col-sm-8 col-xs-12" cellpadding="20">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding margin-top16">
                        <label valign="top" class="notification-content col-xs-12 col-sm-5 col-md-6 col-lg-5 no-padding text-right">
                            [[[System notifications]]]
                            <div id="settings-info-tag">
                                <span class="dropdown-toggle cursor-type" data-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                <div class="col-xs-2 dropdown-menu" id="tooltip-info" role="menu">
                                    [[[System notifications will appear in the bottom left once the user logs in to the application.]]]
                                </div>
                            </div>
                        </label>
                        <div class="col-xs-11 col-sm-6 col-md-4 col-lg-3 no-padding dropdown">
                            @Html.DropDownListFor(model => model.EnableSystemNotification, notificationList, new { @class = "selectpicker notification-disabled", @id = "system-notify-status" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding margin-top16">
                        <label class="col-xs-12 col-sm-5 col-md-6 col-lg-5 no-padding notification-content text-right">
                            [[[Mail notifications]]]
                            <div id="settings-info-tag">
                                <span class="dropdown-toggle cursor-type" data-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                <div class="col-xs-2 dropdown-menu" id="tooltip-info" role="menu">
                                    [[[Users will be notified of comments through email.]]]
                                </div>
                            </div>
                        </label>
                        <div class="hidden-visibility col-xs-11 col-sm-6 col-md-4 col-lg-3 no-padding dropdown">
                            @Html.DropDownListFor(model => model.EnableMailNotification, notificationList, new { @class = "selectpicker notification-disabled", @id = "mail-notify-status" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding margin-top16">
                        <label class="col-xs-12 col-sm-5 col-md-6 col-lg-5 no-padding notification-content text-right">
                            [[[Autowatch for comments of created items]]]
                            <div id="settings-info-tag">
                                <span class="dropdown-toggle cursor-type" data-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                <div class="col-xs-2 dropdown-menu" id="tooltip-info" role="menu">
                                    [[[Enabling this will send notifications for comments on all the reports users have created.]]]
                                </div>
                            </div>
                        </label>
                        <div class="hidden-visibility col-xs-11 col-sm-6 col-md-4 col-lg-3 no-padding dropdown">
                            @Html.DropDownListFor(model => model.EnableAutoWatchOfCommentsOfCreatedItems, notificationList, new { @class = "selectpicker notification-disabled", @id = "autowatch-created-comment-status" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding margin-top16">
                        <label class="col-xs-12 col-sm-5 col-md-6 col-lg-5 no-padding notification-content text-right">
                            [[[Autowatch for comments of accessible items]]]
                            <div id="settings-info-tag">
                                <span class="dropdown-toggle cursor-type" data-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                <div class="col-xs-2 dropdown-menu" id="tooltip-info" role="menu">
                                    [[[Enabling this will send notifications for comments on all the reports users have access to.]]]
                                </div>
                            </div>
                        </label>
                        <div class="hidden-visibility col-xs-11 col-sm-6 col-md-4 col-lg-3 no-padding dropdown">
                            @Html.DropDownListFor(model => model.EnableAutoWatchOfCommentsOfAccessibleItems, new SelectList(new List<Object> { new { value = "0", text = "[[[Enable]]]" }, new { value = "1", text = "[[[Disable]]]" }, new { value = "2", text = "[[[Inherit from global settings]]]" } }, "value", "text", Model.EnableAutoWatchOfCommentsOfAccessibleItems), new { @class = "selectpicker notification-disabled", @id = "autowatch-access-comment-status" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding margin-top16">
                        <label class="col-xs-12 col-sm-5 col-md-6 col-lg-5 no-padding notification-content text-right">
                            [[[Report schedule notifications]]]
                            <div id="settings-info-tag">
                                <span class="dropdown-toggle cursor-type" data-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                <div class="col-xs-2 dropdown-menu" id="tooltip-info" role="menu">
                                    [[[Enabling this will send notifications to the scheduled reports.]]]
                                </div>
                            </div>
                        </label>
                        <div class="hidden-visibility col-xs-11 col-sm-6 col-md-4 col-lg-3 no-padding dropdown">
                            @Html.DropDownListFor(model => model.EnableReportScheduleNotification, new SelectList(new List<Object> { new { value = "0", text = "[[[Enable]]]" }, new { value = "1", text = "[[[Disable]]]" }, new { value = "2", text = "[[[Inherit from global settings]]]" } }, "value", "text", Model.EnableReportScheduleNotification), new { @class = "selectpicker notification-disabled", @id = "report-schedule-notification" })
                        </div>
                    </div>
                    @if (Context.Session.GetString("IsAdmin") != null && Convert.ToBoolean(Context.Session.GetString("IsAdmin")))
                    {
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 no-padding margin-top16">
                            <label class="col-xs-12 col-sm-5 col-md-6 col-lg-5 no-padding notification-content text-right">
                                [[[User schedule notification]]]
                                <div id="settings-info-tag">
                                    <span class="dropdown-toggle cursor-type" data-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                    <div class="col-xs-2 dropdown-menu" id="tooltip-info" role="menu">
                                        [[[Enabling this will send notifications to the scheduled user who are all synchronized.]]]
                                    </div>
                                </div>
                            </label>
                            <div class="hidden-visibility col-xs-11 col-sm-6 col-md-4 col-lg-3 no-padding dropdown">
                                @Html.DropDownListFor(model => model.EnableUserScheduleNotification, new SelectList(new List<Object> { new { value = "0", text = "[[[Enable]]]" }, new { value = "1", text = "[[[Disable]]]" }, new { value = "2", text = "[[[Inherit from global settings]]]" } }, "value", "text", Model.EnableUserScheduleNotification), new { @class = "selectpicker notification-disabled", @id = "user-schedule-notification" })
                            </div>
                        </div>
                    }
                    </div>
                <div id="edit-button" class="col-sm-4 col-xs-12 no-padding">
                    <input type="button" class="secondary-button pull-right" id="edit-settings" title="" value="[[[Edit]]]">
                    <input type="button" class="secondary-button pull-right" title="" id="cancel-settings" value="[[[Cancel]]]">
                    <input type="button" class="primary-button pull-right inactive-content" id="update-notification-settings" title="" value="[[[Save]]]">
                </div>
            </form>
        </div>
    </div>
    <div id="inherit-settings-info" class="col-xs-12 no-padding">* [[[Inherit from global settings will use the global notification settings configured by the administrator.]]]</div>
