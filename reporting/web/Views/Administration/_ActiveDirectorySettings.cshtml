                                            <div class="su su-eye show-hide-password"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <div class="col-md-6 no-padding no-margin">
                                        <label class="col-md-4 connect-database-padding txt-holder app-textbox-label">
                                            [[[Database name]]]
                                        </label>
                                        <div class="col-md-8 connect-database-padding txt-holder">
                                            <select id="txt-dbname" class="selectpicker database-name-select sqlpopup" title="[[[Database name]]]" data-size="5">
                                                <option data-hidden="true" value="">[[[Database name]]]</option>
                                                @if (ViewBag.DbSettings != null)
                                                {
                                                    <option value="@ViewBag.DbSettings.DatabaseName" selected="selected">@ViewBag.DbSettings.DatabaseName</option>
                                                }

                                            </select>
                                            <div class="loader-blue loader-icon database-select-loader-icon display-none " id="sql-loader-icon">
