@{
    var globalAppSettings = _globalAppSettings;
    var dashboardServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    bool isSelfHosted = ServerAppConfig.IsSelfHosted;
}

<div id="x-frame-options-settings-body" class="admin-page-body">
    <div class="col-xs-12 no-padding field-container-dashboard">
        <div class="info-label">
            @Html.CheckBox("x-frame", (bool)globalAppSettings.SystemSettings.IsXFrameOptionsEnabled, new { @class = "material-checkbox" })
            <label for="x-frame" id="x-frame-label">
                [[[Enable X-Frame-Options]]]
            </label>
        </div>
        <div class="info-message" id="x-frame-checkbox-label">
            [[[If you enable this option, the application will add an X-Frame-Options header, SAMEORIGIN, meaning that the page will only be displayed if all frame ancestors and the page origin are the same. By default, this option is disabled.]]]
        </div>
        <div class="bg-warning x-frame-notification">
            <span class="su su-info x-frame-info"></span>
            [[[Please make sure that you are not using iframe embedding, as it will not work when this setting is saved.]]]
        </div>
    </div>
</div>
