@using Syncfusion.Server.Base.Helpers
@model string

@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var identityResponse = Context.RequestServices.GetRequiredService<ServerPrincipal>();
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    var canCreateCategory = ViewData["CanCreateCategory"] != null ? Convert.ToBoolean(ViewData["CanCreateCategory"]) : false;
}


@await Html.PartialAsync("~/Views/Shared/_LoaderIcon.cshtml")

<script nonce="@Model">
    var moveItemUrl = "@Url.Action("moveitem", "items")";
    var canCreateCategory = "@canCreateCategory";
    var isSelfHosted = @Json.Serialize(ServerAppConfig.IsSelfHosted);

    $(document).ready(function () {
        load();
    });

    function load() {
        if (($(parent.window).width()) > 1400) {
            $(".dialog").addClass("iframe");
        }

        if (($(parent.window).width()) < 1400) {
            $(".dialog").removeClass("iframe");
        }
    }
</script>


<environment include="Development,CloudDevelopment">
    <script nonce="@Model" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/itemaction.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/itemaction.js")" crossorigin="anonymous"></script>
</environment>
<environment exclude="Development,CloudDevelopment">
    <script nonce="@Model" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/itemaction.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/itemaction.min.js")" crossorigin="anonymous"></script>
</environment>

<body>
    <div id="PopupContainer" class="dialog">

        <div class="col-md-12 dialog-header">
            <div class="col-11 no-padding">
                <span class="su su-move Head-icon"></span>
                <span class="PopupTitle">[[[Move Report]]]</span>
                <div class="report-name padding10 no-left-padding no-top-padding ellipsis" title="@ViewBag.FullItemName">@ViewBag.FullItemName</div>
            </div>
            <div class="col-1 no-padding">
                <a href="#" title="[[[Close]]]" class="PopupClose close-dialog prevent-default-action"><span class="su su-close"></span></a>
            </div>
        </div>
        @if (TempData["ErrorMessage"] == null)
        {
            <form class="dialog-body col-12 no-padding copy-move-category" id="move_report_form">
                <div class="copy-dropdown col-12 padding20 no-bottom-padding" id="item-name-division">
                    <div class="col-3 no-padding text-label">
                        <div class="float-end">[[[Name]]]<span class="mandatory">*</span></div>
                    </div>
                    <div class="col-1 no-padding"></div>
                    <div class="col-8 no-padding">
                        <input type="text" id="item_name" name="itemName" maxlength="255" value="@ViewBag.FullItemName" class="form-control site-orgname-fields bottom-margin30 text" />
                        <span class="validation-error text"></span>
                    </div>
                </div>
                <div class="copy-dropdown col-12 padding20 no-bottom-padding no-top-padding bottom-margin30" id="action-category-division">
                    <div class="col-3 no-padding text-label"><div class="float-end">[[[Move to Category]]]</div></div>
                    <div class="col-1 no-padding"></div>
                    @if (canCreateCategory)
                    {
                        <div class="col-7 no-padding dropup">
                            <select id="CategoryList" class="selectpicker dropup" data-live-search="true" title="[[[Select category]]]" data-size="3" data-dropup-auto="false"></select>
                            <span class="category-validation-error text"></span>
                        </div>
                        <span class="col-1 input-group-btn no-padding" id="add-new-category">
                            <button class="btn btn-default" style="padding:4px 10px;" type="button" title="[[[Add new Category]]]" data-bs-toggle="tooltip"><span class="su-add" style="font-size:12px;"></span></button>
                        </span>
                    }
                    else
                    {
                        <div class="col-8 no-padding dropup">
                            <select id="CategoryList" class="selectpicker" data-live-search="true" title='[[[Select category]]]' data-size="3"></select>
                        </div>
                    }

                </div>
                <input type="hidden" id="ItemIdHidden" value="@Context.Request.Form["itemId"]" />
                <input type="hidden" id="userIdHidden" value="@identityResponse.User.UserId" />
            </form>

            <div class="col-4"><input type="hidden" id="ItemIdHidden" value="@Context.Request.Form["itemId"]" /></div>
            <div class="col-12 dialog-footer no-right-padding no-left-padding dialog-footer-position" id="action-button-division">
                <div class="col-6">
                    <span class="ErrorMessage text-left"></span>
                    <span class="SuccessMessage "></span>
                </div>
                <div class="col-6 rightAlign">
                    @{
                        if (ViewBag.Action == "Move")
                        {
                            <input type="button" id="MoveButton" title="" class="app-button app-primary-button app-btn-primary" value="[[[Move]]]" />
                        }

                    }
                    <input type="button" id="CancelButton" title="" class="app-button app-secondary-button app-btn-secondary PopupClose" value="[[[Cancel]]]" />
                </div>
            </div>

        }
        else
        {
            <div class="dialog-body col-12 no-padding">

                <div class="col-12 no-left-padding padding20 no-right-padding bottom-margin30">
                    <div class="permission-denied">@TempData["ErrorMessage"]</div>
                </div>
                <div class="col-12 dialog-footer no-right-padding no-left-padding dialog-footer-position" id="action-button-division">
                    <div class="col-12 no-padding text-center">
                        <input type="button" id="CancelButton" title="" class="app-button app-secondary-button app-btn-secondary" value="[[[OK]]]" />
                    </div>
                </div>
            </div>
        }
        <environment include="Development,CloudDevelopment">
            <script nonce="@Model" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
        </environment>
        <environment exclude="Development,CloudDevelopment">
            <script nonce="@Model" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
        </environment>
    </div>

    <script nonce="@Model">
        $(document).ready(function() {
            var categories = @Json.Serialize(ViewBag.CategoryDetails);
            var options = "";
            var firstOptionSelected = false;
            for (var t = 0; t < categories.length; t++) {
                if (categories[t].Id != "@ViewBag.ItemId.ToString()") {
                    var selected = "";
                    if (!firstOptionSelected) {
                        selected = " selected";
                        firstOptionSelected = true;
                    }
                    options += '<option value="' + categories[t].Id + '"' + selected + '>' + categories[t].Name + '</option>';
                }
            }
            $("#CategoryList").html(options);
            $("#CategoryList").selectpicker('destroy');
            $("#CategoryList").selectpicker();
            $("#CategoryList").parent(".dropdown-menu.show").css("max-height", "140px !important");
            $("#add-new-category [ data-bs-toggle='tooltip']").tooltip();
            window.parent.$('#ItemAction_wrapper').ejWaitingPopup("hide");
        });
    </script>
</body>