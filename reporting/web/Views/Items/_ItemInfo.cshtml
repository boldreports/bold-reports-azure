<div id="item-info-popup" class="fluent-popup custom-bootstrap-styles custom-server-style" style="display: none" ng-controller="ItemInfoCtrl">
    <div class="fluent-popup-header">
        <h4 class="popup-title">
            <span class="su su-info"></span>
            <span id="info-dialog-header">[[[Info]]]</span>
            <button id="close-info-dialog" type="button" title="[[[Close]]]" data-bs-toggle="tool-tip" data-container="body" class="btn-close popup-close" ng-click="closeItemInfo()" aria-label="Close">
                <span class="su su-close"></span>
            </button>
        </h4>
    </div>
    <div class="fluent-item-popup-body">
        <p class="item-info-name">
            {{ItemDetail.Name}}
        </p>
        <p class="item-info-description" ng-show="ItemDetail.Description != ''">
            {{ItemDetail.Description}}
        </p>
        <span class="item-info-created">
            <label class="info-label">{{ItemDetail.ItemType == ItemType.Report ? '[[[Report Id:]]]' : ItemDetail.ItemType == ItemType.Dataset ? '[[[Dataset Id:]]]' : ItemDetail.ItemType == ItemType.DataSource ? '[[[Data source Id:]]]' : '[[[Report Part Id:]]]'}}</label> {{ItemDetail.Id}}
        </span>
        <span class="item-info-created capitalize-text" ng-if="ItemDetail.ItemType != ItemType.Report && ItemDetail.ItemType != ItemType.Dataset && ItemDetail.ItemType != ItemType.DataSource && ItemDetail.IsDraft == false">
            <label class="info-label">[[[Report Part Type:]]]</label> {{ItemDetail.ReportPartType}}
        </span>
        <span class="item-info-created">
            <label class="info-label">[[[Created by:]]]</label> {{ItemDetail.CreatedByDisplayName}}
        </span>
        <span class="item-info-created">
            <label class="info-label">[[[Created on:]]]</label> {{ItemDetail.CreatedDate}}
        </span>
        <span class="item-info-modified">
            <label class="info-label">[[[Last modified by:]]]</label> {{ItemDetail.ModifiedByFullName}}
        </span>
        <span class="item-info-modified" ng-class="ItemDetail.ItemType != ItemType.Report ? 'set-margin-bottom' : ''">
            <label class="info-label">[[[Last modified on:]]]</label> {{ItemDetail.ModifiedDate}}
        </span>
        <span class="item-info-modified" ng-hide="ItemDetail.IsDraft" ng-if="ItemDetail.ItemType == ItemType.Report">
            <label class="info-label">[[[Category: ]]]</label> {{ItemDetail.CategoryName}}
        </span>
        <span class="item-info-linked-reports" ng-if="ItemDetail.ItemType != ItemType.Report && ItemDetail.IsDraft == false">
            <label class="info-label">[[[Linked Reports: ]]]</label><span class="app-hyperlink" id="show-linked-reports-link" ng-click="getReportsLinkedWithReportPart()">[[[Show]]]</span><span id="linked-reports"></span>
        </span>
        @*Below lines for datasource and dataset info feature*@
        @*<span class="item-info-modified">
            <label class="info-label">[[[Data Source: ]]]</label>
            {{ItemDetail.DataSource === '' ? 'Embedded In Reports' : ItemDetail.DataSource }}
        </span>
        <span class="item-info-modified">
            <label class="info-label">[[[Data Set: ]]]</label>
            {{ItemDetail.DataSet === '' ? 'Embedded In Reports' : ItemDetail.DataSet }}
        </span>*@

    </div>
    <div class="fluent-popup-footer">
        <div class="col-12" ng-show="showDashboardLinkButton" ng-if="ItemDetail.ItemType != ItemType.Dataset && ItemDetail.ItemType != ItemType.DataSource">
            <a href="{{ItemDetail.ItemType == ItemType.Report ? viewDashboardUrl(ItemDetail.Id, ItemDetail.CategoryName, ItemDetail.Name, ItemDetail.IsDraft) : editReportPartUrl(ItemDetail.Id, ItemDetail.Name)}}" class="link-button app-btn-link" target="_blank" title="">{{GetInfoButtonText(ItemDetail.ItemType, ItemDetail.IsDraft)}}</a>
        </div>
        <div class="col-12 ng-hide" ng-show="!showDashboardLinkButton">
            <button class="secondary-button app-btn-secondary" ng-click="closeItemInfo()" title="">[[[Close]]]</button>
        </div>
    </div>
</div>