@{
    Layout = null;
}

@await Html.PartialAsync("~/Views/Shared/_LoaderIcon.cshtml")
<!DOCTYPE html>

<head>
    <script>
        var addExternalSitesUrl = "@Url.Action("AddExternalSites", "Publish")";
        var isSiteNameExistsUrl = "@Url.Action("IsExternalSiteNameExists", "Publish")";
    </script>
</head>
<body>
    <div id="get-external-site-content" style="display:none">
        <form class="col-lg-12 no-padding" id="dialog-container" autocomplete="off">
            <div class="col-xs-11 no-padding no-margin first-child">
                <label class="app-textbox-label col-xs-3">[[[Name]]]</label>
                <div class="col-xs-9 no-margin form-input-field">
                    <input type="text" class="form-control col-xs-6 no-margin" placeholder="[[[Please enter the site name.]]]" name ="external-site-name-input"  id="external-site-name" />
                    <span class="name-validation-message"></span>
                </div>
            </div>
            <div class="col-xs-11 no-padding no-margin">
                <label class="app-textbox-label col-xs-3">[[[Client ID]]]</label>
                <div class="col-xs-9 no-margin form-input-field">
                    <input type="text" class="form-control col-xs-6 no-margin" placeholder="[[[Please enter the Client ID.]]]" name ="external-client-id-input" id="external-client-id" />
                    <span class="clientid-validation-message"></span>
                </div>
            </div>
            <div class="col-xs-11 no-padding no-margin">
                <label class="app-textbox-label col-xs-3">[[[Client Secret]]]</label>
                <div class="col-xs-9 no-margin form-input-field">
                    <input type="password" class="form-control col-xs-6 no-margin" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" name ="external-client-secret-input" id="external-client-secret" />
                    <div class="show-hide-password su su-eye"></div>
                    <span class="client-secret-validation-message"></span>
                </div>
            </div>
            <div class="col-xs-11 no-padding no-margin">
                <label class="app-textbox-label col-xs-3">[[[Site URL]]]</label>
                <div class="col-xs-9 no-margin form-input-field">
                    <input type="text" class="form-control col-xs-6 no-margin" placeholder="[[[Please enter the site URL.]]]" name ="external-site-url-input" id="external-site-url" />
                    <span class="site-url-validation-message"></span>
                </div>
            </div>
        </form>
    </div>
</body>