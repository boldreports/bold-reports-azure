@{
    var tenantSettings = _globalAppSettings;
    var appUrl = tenantSettings.SystemSettings.BaseUrl;
    var description = ViewBag.Description ?? "The " + GlobalAppSettings.BrandingDisplayName + " is an end-to-end solution for creating, managing and sharing interactive business reports. With our hosted solution for reports, you don't need to worry about maintaining a server at your end.";
}

<meta property="og:title" content="@ViewBag.PageTitle | @ViewBag.OrganizationName" />
<meta property="og:description" content="@description" />
<meta property="og:image" content="@ViewBag.Logo" />
<meta property="og:url" content="@appUrl" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="@ViewBag.OrganizationName" />
<meta property="twitter:title" content="@ViewBag.PageTitle  | @ViewBag.OrganizationName" />
<meta property="twitter:url" content="@appUrl" />
<meta property="twitter:card" content="summary" />
<meta property="twitter:description" content="@description" />
<meta property="twitter:image" content="@ViewBag.Logo" />