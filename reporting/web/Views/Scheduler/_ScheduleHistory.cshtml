
<!DOCTYPE html>
<head>
    <script nonce="@Context.Items["ScriptNonce"]">
        var scheduleHistoryUrl = "@Url.Action("ScheduleHistory", "items")";
    </script>

</head>
<body>
    <div id="run-history-container" class="col-12 no-padding dialog" style="display:none">
        <div class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog col-lg-12 popup-header no-padding" role="document">
                <div class="modal-content col-lg-12" data-spy="scroll">
                    <div class="col-lg-12 modal-header">
                        <div class="col-lg-11 col-11 col-sm-11 col-md-11 no-padding">
                            <span class="su su-open head-icon col-lg-1 col-1 col-sm-1 col-md-1 header-icon"><i class="su su-open path1"></i></span>
                            <span class="modal-title popup-title schedule-popup-title ellipsis col-lg-10 col-10 col-sm-10 col-md-10 no-padding" data-bs-toggle="tooltip" data-bs-placement="bottom" data-container="body" style="font-size:16px;"></span>
                        </div>
                        <div class="col-lg-1 col-1 col-sm-1 col-md-1 no-padding">
                            <a href="#" data-bs-toggle="tooltip" data-bs-placement="left" data-container="body" title="[[[Close]]]" class="popup-close float-end prevent-default-action"><span class="su su-close"></span></a>
                        </div>
                    </div>
                    <div class="modal-body col-lg-12">
                        <div class="total-move-container col-12 version-container-padding">
                            <div id="item-history-container" class="show col-12 no-padding version-area" data-previous-parent-id="none" data-parent-id="home" data-type="self">
                                <div class="col-12 no-padding" style="display:block; padding-top:20px; float:left;">
                                    <div id="historygrid" class="grid">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 modal-footer">
                        <div class="col-12 no-padding">
                            <input type="button" id="close-button" title="[[[Close]]]" class="app-button app-secondary-button app-btn-secondary float-end popup-close" value="[[[Close]]]" tabindex="-1" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="ScheduleFailureStatus" class="fluent-popup custom-bootstrap-styles custom-server-style no-padding" style="display: none">
        <div class="fluent-popup-header col-12 no-padding">
            <h4 class="popup-title">
                <span class="su su-info"></span>
                <span id="info-dialog-header">[[[Failure Info]]]</span>
                <button id="close-info-dialog" type="button" title="[[[Close]]]" data-bs-toggle="tool-tip" data-container="body" class="btn-close popup-close close-failure-info float-end" aria-label="Close">
                    <span class="su su-close"></span>
                </button>
            </h4>
        </div>
        <div class="fluent-item-popup-body col-12">
            <span id="ScheduleFailureStatusMessage"></span>
        </div>
        <div class="fluent-popup-footer col-12">
            <div class="col-12 no-padding">
                <button class="app-button app-secondary-button app-btn-secondary close-failure-info" title="Close">[[[Close]]]</button>
            </div>
        </div>
    </div>
</body>
<script nonce="@Context.Items["ScriptNonce"]" type="text/x-jsrender" id="execution_type">
    <div class="grid-content" title="{{:ExecutionType}}" data-bs-toggle="tooltip">{{:ExecutionType}}</div>
</script>
<script nonce="@Context.Items["ScriptNonce"]" type="text/x-jsrender" id="schedule_status">
    {{if Status == "Failed"}}
    <span><a id="on-failure-status" class="grid-content" href="#">{{:Status}}</a></span>
    {{else}}
<div class="grid-content" title="{{:Status}}" data-bs-toggle="tooltip">{{:Status}}</div>
    {{/if}}
</script>
<script nonce="@Context.Items["ScriptNonce"]" type="text/x-jsrender" id="schedule_message">
    <div class="grid-content" title="{{:Message}}" data-bs-toggle="tooltip">{{:Message}}</div>
</script>
<script nonce="@Context.Items["ScriptNonce"]" type="text/x-jsrender" id="executed_date">
    <div class="grid-content" title="{{:ExecutedDateString}}" data-bs-toggle="tooltip">{{:ExecutedDateString}}</div>
</script>
<script nonce="@Context.Items["ScriptNonce"]" type="text/x-jsrender" id="log_details">
    <div class="grid-content" title="{{:Details}}" data-bs-toggle="tooltip">{{:Details}}</div>
</script>
<script nonce="@Context.Items["ScriptNonce"]" type="text/javascript">
    $(document).ready(function () {
        $("#historygrid").ejGrid({
            gridLines: ej.Grid.GridLines.None,
            allowPaging: true,
            pageSettings: { pageSize: 10 },
            allowSorting: true,
            allowSearching: true,
            allowFiltering: false,
            enableAltRow: false,
            allowSelection: true,
            enableRowHover: true,
            locale: "en-us",
            rowDataBound: function () {
                $('[data-bs-toggle="tooltip"]').tooltip();
            },
            dataBound: function (args) {
                $('[data-bs-toggle="tooltip"]').tooltip();
            },
            columns: [
                {
                    template: true,
                    templateID: "#execution_type",
                    headerText: "[[[Execution Type]]]",
                    width: 40,
                    field: "ExecutionType"
                },
                {
                    template: true,
                    templateID: "#schedule_status",
                    headerText: "[[[Status]]]",
                    width: 25,
                    field: "Status"
                },
                {
                    template: true,
                    templateID: "#executed_date",
                    headerText: "[[[Execution Date]]]",
                    width: 40,
                    field: "ExecutedDateString"
                },
            ]
        });

        $(document).on("click", "#on-failure-status", function (e) {
            e.preventDefault();
            onFailureStatusClick();
        });

        $(document).on("click", ".prevent-default-action", function (e) {
            e.preventDefault();
        });
    });
</script>