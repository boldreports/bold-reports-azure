@using Syncfusion.Server.Base.Helpers

<!DOCTYPE html>
@{
    Layout = null;
    var globalAppSettings = _globalAppSettings;
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
}
<html class="report-server">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <title>
        @ViewBag.Title
    </title>
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/theme/light.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/theme/light.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/edit-datasets.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/edit-datasets.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, reportServerResourceUrl)" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/edit-datasets.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/edit-datasets.js")" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/theme/light.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/theme/light.min.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/edit-datasets.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/edit-datasets.min.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, reportServerResourceUrl)" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/edit-datasets.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/edit-datasets.min.js")" crossorigin="anonymous"></script>
    </environment>

    <script nonce="@Context.Items["ScriptNonce"]">
        var editDatasetUrl = "@Url.Action("EditDataset", "Datasets")";
        var datasetselectdatasourceUrl = "@Url.Action("DatasetSelectDataSource", "Datasets")";
        var isDatasetExistUrl = "@Url.Action("IsDatasetExist", "Datasets")";
        var deletetemporarydatasetUrl = "@Url.Action("DeleteTemporaryDataset", "Datasets")";

        $(document).ready(function () {
            load();

            var firstLoad = true;
            $("#dataset_upload_iframe").on('load', function () {
            if (firstLoad) {
                createEditDatasetPopup(@Json.Serialize(ViewData["datasetInfo"]));
                firstLoad = false;
            }
            window.focus();
            });
        });

        function load() {
            $('[data-bs-toggle="tooltip"]').tooltip();
            if (($(parent.window).width()) > 1400) {
                $(".dialog").addClass("iframe");
            }

            if (($(parent.window).width()) < 1400) {
                $(".dialog").removeClass("iframe");
            }
        }
    </script>
</head>
    <body style="background:white;">
        <form id="editItemForm" name="editItemForm" method="post" enctype="multipart/form-data" autocomplete="off">

            <div id="PopupContainer" class="no-padding dialog edit-dataset">
                <input type="hidden" id="publishedFileName" value="none">
                <div class="col-12 dialog-header">
                    <span class="su su-dataset Head-icon"></span>
                    <span class="PopupTitle">[[[Update Dataset]]]</span>
                    <a id="close-update-dataset-popup" title="[[[Close]]]" data-bs-toggle="tooltip" data-bs-placement="bottom" class="PopupClose"><span class="su su-close"></span></a>
                </div>

                <div class="dialog-body col-12 no-padding file-content-height">
                    <div id="general-file-container">
                        <table class="edit-dataset-table">
                            <tbody>
                                <tr>
                                    <td class="col-md-2 float-end"><div class="bottom-margin30 dataset-name">[[[Name]]]<span class="mandatory">*</span></div></td>
                                    <td class="col-md-10">
                                        <span>
                                            <input type="text" id="file_name" name="Name" class="form-control text-field bottom-margin30  text" maxlength="255" tabindex="1" />
                                            <span id="validate-name" class="validation-message text"></span>
                                            <div id="plugin_validation" class="validation-message text"></div>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-2"><div class="bottom-margin30 float-end">[[[Description]]]</div></td>
                                    <td class="col-12">
                                        <textarea style="resize: none;" name="description" class="form-control text-field bottom-margin30 text" maxlength="1024" id="file-description" tabindex="2">@Model.Description</textarea>
                                        <span class="notification help-text">
                                            *[[[1024 characters maximum]]]
                                        </span>
                                        <input type="hidden" id="description_change_validation" name="IsDescriptionChanged" value="false" />
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-2"><div class="rsd-file-label bottom-margin35 float-end" id="rsd-label">[[[RSD File]]]<span class="mandatory">*</span></div></td>
                                    <td class="col-12">
                                        <iframe id="dataset_upload_iframe" style="border: none; height: 35px;" src="@Url.Action("UploadDatasetView", "Datasets")" scrolling="no" tabindex="-1"></iframe>
                                        <span id="validate-file" class="validation-message text"></span>
                                        <span id="uploadValidation" class="ErrorMessage text"></span>
                                    </td>
                                </tr>
                                <tr id="version_comment">
                                    <td class="col-2">
                                        <div class="bottom-margin30 text-end">[[[Version comments]]]</div>
                                    </td>
                                    <td class="col-12">
                                        <textarea id='comment' class='form-control bottom-margin30 text' name="versionComment" readonly="" maxlength="1024" tabindex="3"></textarea>
                                        <span class="notification help-text">
                                            *[[[1024 characters maximum]]]
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="col-md-12 DisplayNone" id="datasource_list">
                            <h4 class="datasource-table-header heading">[[[Select Data Source]]]</h4>
                            <table id="datasource_list_table"></table>
                        </div>
                    </div>
                </div>

                <div class="col-12 dataset-dialog-footer rightAlign">
                    <div class="float-end">
                        <input type="submit" class="hide-content" style="display: none;" />
                        <input type="button" title="" class="btn primary-button app-btn-primary" value="[[[Update]]]" id="publish_file" disabled tabindex="4">
                        <input type="button" title="" class="btn secondary-button app-btn-secondary" id="cancelEditDataSet" value="[[[Cancel]]]" tabindex="4">
                    </div>
                </div>
            </div>
            </form>
    </body>
</html>