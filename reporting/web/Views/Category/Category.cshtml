@using Syncfusion.Server.Base.Helpers

@{
    var globalAppSettings = _globalAppSettings;
    ViewBag.Title = globalAppSettings.SystemSettings.OrganizationName + " - [[[Categories]]]";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
}

@model List<ItemDetail>
<script nonce="@Context.Items["ScriptNonce"]">
    var deleteConfirmUrl = "@Url.Action("deleteconfirmation", "items")";
</script>


@section scripts{
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/category-page.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/category-page.css")" crossorigin="anonymous" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/category-page.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/category-page.js")" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/category-page.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/category-page.min.css")" crossorigin="anonymous" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/category-page.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/category-page.min.js")" crossorigin="anonymous"></script>
    </environment>
}
<div id="itemGridHeading">
    [[[Categories]]]
    <div class="float-end">
        <span class="su su-add items-add" onclick="openAddOptions()"></span>
    </div>
</div>
<div id="itemGridContainer">
    @await Html.PartialAsync("../Items/_ItemsGrid", new ViewDataDictionary(ViewData) { { "gridName", "category" } })
</div>
<div id="EditCategoryPopup">
    <iframe id="EditCategoryPopup_iframe" class="categoryDialog"></iframe>
</div>
@await Html.PartialAsync("../Items/_AddItems")
