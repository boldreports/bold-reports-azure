@{
    var isLayoutFooter = ViewBag.IsLayoutFooter != null ? ViewBag.IsLayoutFooter : false;
    var domain = System.Configuration.ConfigurationManager.AppSettings["syncfusion:product_home"];
}

<footer class="col-xs-12 col-md-12 col-sm-12 col-lg-12 no-padding layout-footer no-margin">
        <div class="footer-image">
            <img src="@GlobalAppSettings.SystemSettings.CDNLink/images/@GlobalAppSettings.Branding/application/@(isLayoutFooter ? "footer_logo_black.svg" : "syncfusion_logo_white.svg")" alt="[[[Syncfusion]]]" width="110px" height="25px">
        </div>
        <div class="footer-link @(isLayoutFooter ? "layout" : string.Empty)">
            <a href="@domain/copyright" target="_blank">[[[Copyright © 2001 - ]]]@DateTime.UtcNow.Year [[[Syncfusion Inc. All Rights Reserved.]]]</a> | <a href="@domain/privacy" target="_blank">[[[Privacy Policy]]]</a> | <a href="@domain/cookie-policy" target="_blank">[[[Cookie Policy]]]</a>  | <a href="@domain/terms-of-use" target="_blank">[[[Terms of Use]]]</a>
        </div>
</footer>