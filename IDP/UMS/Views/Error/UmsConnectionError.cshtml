@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>[[[Login Error - ]]]@GlobalAppSettings.SystemSettings.OrganizationName</title>
    @Styles.Render("~/styles/layout")
    @Styles.Render("~/styles/error-page")
    <script src="~/Scripts/jQuery/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function() {
            $(".base-container-bg").css("display", "");
        });
    </script>
</head>
<body>
    <div class="base-container-bg" style="display: none">
        <div class="base-conatiner" id="base-conatiner">
            <div id="main-div">
                <div class="app-logo">
                    <img src="@GlobalAppSettings.CdnDomain/static/company/@GlobalAppSettings.Branding/logo/v1/@IconFileNames.LoginLogo" />
                </div>
                <div class="secondary-div">
                    <div class="page-title">
                        [[[Login Error]]]
                    </div>
                    <div class="page-content text-left">
                        <span>[[[Error in establishing a connection to our login service.]]]</span><br />
                        <br />
                        <span>[[[Refresh the page and try again. If the problems persist, please contact the system administrator for more information.]]]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>