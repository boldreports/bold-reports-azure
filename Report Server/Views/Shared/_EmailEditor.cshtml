@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@Styles.Render("~/bundles/Styles/ScheduleEmailEditor")

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
</head>
<body>
    <div id="email-editor-panel">
        <div class="sub-text-div-container">
            <div>
                <spam>[[[Subject]]]</spam>
            </div>
            <div>
                <input type="text" class="form-control" id="sub_email-text-box" />
            </div>
        </div>
        <div class="sub-body-label">[[[Body]]]</div>
        <div class="col-sm-12 col-xs-12 no-padding" id="selected-users-container">
            <textarea id="rte-post" class="form-control comment-area" maxlength="4000"></textarea>
            <div class="hidden">
                <textarea id="temp" class="hidden"></textarea>
                <div id="toRemoveCulture"></div>
            </div>
            <div class="var-drop-box col-xs-12" style="width:220px;">
                <select id="variable-drop-box" data-live-search="true" title='[[[variables]]]' name="" class="selectpicker" style="width:183px;" data-size="7">
                    @foreach (CustomEmailTemplate val in Enum.GetValues(typeof(CustomEmailTemplate)))
                    {
                        <option value="@val">@GlobalAppSettings.GetDescription(val)</option>
                    }
                    <option value="" selected="selected" class="hide-option" disabled="disabled">[[[Select variables]]]</option>
                </select>
            </div>
        </div>

    </div>
</body>
</html>
@Scripts.Render("~/bundles/Scripts/ScheduleEmailEditor")

